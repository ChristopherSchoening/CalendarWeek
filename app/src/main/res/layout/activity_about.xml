<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.christopherschoening.calendarweek.AboutActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/developed_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="4dp"
        android:textSize="16sp"
        android:text="@string/developed_by_text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="24dp"
        android:textSize="16sp"
        android:text="@string/material_design_hyperlink_text"
        android:textColor="@color/colorHyperlink"
        android:onClick="materialDesignHyperlink"
        />

</LinearLayout>
